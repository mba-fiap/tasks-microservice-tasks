generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MEMBER
}

enum Status {
  ACTIVE
  INACTIVE
  PENDING
}

model Task {
  id             String    @id @default(uuid())
  title          String
  date           DateTime
  completionDate DateTime?
  status         Status    @default(ACTIVE)
  userId         String
  created_at     DateTime  @default(now())

  @@map("tasks")
}
